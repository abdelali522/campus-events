<%- include('partials/head', { pageTitle: pageTitle || 'Server Error', useFontAwesome: true }) %>

<body class="page-background-gradient"> <%# Or a simpler body class if you prefer for error pages %>
    <%- include('partials/navbar', { user: user }) %> <%# 'user' might be undefined if session is lost/error before session middleware %>

    <main class="page-content-wrapper">
        <div class="container" style="text-align: center; padding: 40px; background: rgba(255,255,255,0.9); border-radius: 10px; margin-top: 20px; margin-bottom: 20px;">
            <div style="font-size: 4rem; color: #dc3545; margin-bottom: 20px;">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h1><%= pageTitle || 'Oops! Server Error' %></h1>
            <p style="font-size: 1.2rem; color: #555; margin-top: 10px;">
                We seem to be having some technical difficulties. Please try again later.
            </p>
            <% if (typeof errorMsg !== 'undefined' && errorMsg && process.env.NODE_ENV !== 'production') { %>
                <div style="background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; padding: 15px; border-radius: 5px; margin-top: 20px; text-align: left;">
                    <strong>Error Details (Development Mode):</strong>
                    <pre style="white-space: pre-wrap; word-wrap: break-word; margin-top: 10px; font-size: 0.9em;"><%= errorMsg %></pre>
                </div>
            <% } %>
            <a href="/" class="btn btn-primary" style="margin-top: 30px; background-color: #007bff; border-color: #007bff;">Go to Homepage</a>
        </div>
    </main>

    <%- include('partials/footer') %>
</body>
</html>
